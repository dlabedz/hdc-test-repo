# Wordpress - ignore core, configuration, examples, uploads and logs.
# Forked from: https://github.com/github/gitignore/blob/main/WordPress.gitignore

# Core
/wp-admin/
/wp-content/index.php
/wp-content/languages
/wp-content/plugins/index.php
/wp-content/themes/index.php
/wp-content/uploads/
/wp-content/blogs.dir/
/wp-content/upgrade/*
/wp-content/backup-db/*
/wp-content/advanced-cache.php
/wp-content/wp-cache-config.php
/wp-content/cache/*
/wp-content/cache/supercache/*
/wp-includes/
/index.php
/license.txt
/readme.html
/wp-*.php
/xmlrpc.php
/.user.ini
/wordfence-waf.php

# Configuration
/wp-config.php

# Themes and Plugins
/themes/*
/themes/twentytwentyfive
/themes/twentytwentyfour
/themes/twentytwentythree
/ai1wm-backups/*
/aiowps_backups/*
/wflogs/*
/plugins/*
/plugins/what-the-file
/mu-plugins/*


# Log files
*.log

# htaccess
.htaccess

# WP Engine
.wpe-devkit/
.wpe-pull-ignore
.wpe-push-ignore
.wpengine-conf/
_wpeprivate/

# Other
.DS_Store
.vscode
node_modules
local-xdebuginfo.php


# -------------------------
# BEGIN Whitelisted Files
# -------------------------

# track these files, if they exist
!.gitignore
!.editorconfig
!.phpcs.xml.dist
!README.md
!CHANGELOG.md
!composer.json
!/themes/tailpress
!/plugins/advanced-custom-fields-pro
!/plugins/blocks-animation
!/plugins/slider
!/plugins/safe-svg
!/sql

# track favicon files, if they exist
!android-chrome-*.png
!apple-touch-icon*.png
!browserconfig.xml
!favicon*.png
!favicon*.ico
!manifest.json
!mstile-*.png
!safari-pinned-tab.svg
!site.webmanifest
